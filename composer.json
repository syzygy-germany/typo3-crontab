{
    "name": "helhum/typo3-crontab",
    "type": "typo3-cms-extension",
    "description": "Advanced scheduling for TYPO3 Console commands and TYPO3 Scheduler tasks",
    "homepage": "https://typo3.org",
    "license": [
        "GPL-2.0-or-later"
    ],
    "authors": [
        {
            "name": "Helmut Hummel",
            "email": "info@helhum.io",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true,
        "preferred-install": {
            "*": "dist"
        },
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "require": {
        "dragonmantank/cron-expression": "^2.3",
        "helhum/typo3-console": "^5.6.0",
        "typo3/cms-core": "~9.5.0 || ~8.7.0",
        "typo3/cms-extbase": "~9.5.0 || ~8.7.0"
    },
    "suggest": {
        "typo3/cms-scheduler": "To be able to execute TYPO3 scheduler tasks"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "crontab",
            "app-dir": ".Build",
            "web-dir": ".Build/public"
        }
    },
    "autoload": {
        "psr-4": {
            "Helhum\\TYPO3\\Crontab\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Helhum\\TYPO3\\Crontab\\Tests\\": "Tests/"
        }
    }
}
